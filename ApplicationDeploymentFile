apiVersion: apps/v1
kind: Deployment
metadata:
  name: tosan-docker-challenges
  namespace: test
spec:
  replicas: 3
  revisionHistoryLimit: 3
  selector:
    matchLabels:
      app: simple-app
  strategy:
    type: Recreate
    rollingUpdate:
      maxSurge: 25%
      maxUnavailable: 25%
  template:
    metadata:
      labels:
        app: simple-app
    spec:
      containers:
      - name: app
        image: tosan-docker-challenges
        ports:
        - containerPort: 80